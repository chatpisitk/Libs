<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="10dp">
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView 
      android:id="@+id/true_dialog_layout_textview_message"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textColor="#ffffffff"/>
    <LinearLayout 
      android:id="@+id/true_dialog_layout_linearlayout_btn_body"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:paddingTop="5dp"
      android:paddingBottom="5dp">
      <Button 
        android:id="@+id/true_dialog_layout_button_positive"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:visibility="gone"/>
      <Button 
        android:id="@+id/true_dialog_layout_button_neutral"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>
      <Button 
        android:id="@+id/true_dialog_layout_button_negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#ffffffff"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:visibility="gone"/>
      
    </LinearLayout> 
  </LinearLayout> 
</RelativeLayout>